<style>
  p{
    margin: 0; 
    padding: 0;
  }
  button{
    padding: 0;
    margin: 0;
  }
  .main{
    background-color: #E4E4E6;
    padding-top: 32px;
    padding-bottom: 256px;
    margin-left: 64px;
  }
  .new-btn {
    display: inline-flex;
    align-items: center;
    background-color: black;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    gap: 10.5px;
    transition: 0.3s ease;
    padding: 10.5px 22px;
  }
  .new-btn-container{
    
  }
  .text-2xl{
    font-size: 4rem;
  }
  .text-xl{
    font-size: 2rem;
  }

  .text-lg{
    font-size: 1.75rem;
  }
  .text-md{
    font-size: 1.5rem;
  }
  .text-sm{
    font-size: 1.05rem;
  }
  .navigator-container{
    display: flex;
    justify-content: center;
  }
  .searchbar-container{
    display: flex;
    justify-content: center;
    margin-bottom: 16px;
    width: 33%;
  }
  .searchbar{
    background: rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    gap: 10px;
    height: 40px;
    border-left: none;
    border-radius: 8px;
    width: 100%;
  }

  .search-button{
    background: rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer;
    margin: 0;
    height: 100%;
    padding: 0 16px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
  }
  .searchbar-input-field{
    border: none;
    border-radius: 8px;
    width: 100%;
    background-color: transparent;
  }
  .searchbar-input-field:focus{
    border: none;
    outline: none;
  }

  .navigator{
    background: rgba(0, 0, 0, 0.05);
    border-radius: 8px;
    display: flex;
    align-items: center;
    height: 40px;
  }
  .navigator-item-container, .navigator-item-container-active{
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    border-radius: 8px;
    cursor: pointer;
  }
  .navigator-item-container-active{
    background: rgba(0, 0, 0, 0.05);
  }

  .navigator-item-container:hover{
    background: rgba(0, 0, 0, 0.05);
  }
  .navigator-item{
    cursor: pointer;
    font-size: 1.15rem;
    color: black;
  }
  .content-container{
    margin-left: 64px;
    margin-right: 64px;
  }

  .trending-container{
    margin-top: 64px;
  }
  .row-1-cols{
    margin-top: 16px;
  }
  .row-2-cols {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(calc(50% - 8px), 1fr));
    gap: 16px;
    margin-top: 16px;
  }

  .row-3-cols {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(calc(33.333% - 11px), 1fr));
    gap: 16px;
    margin-top: 16px;
  }

  .row-4-cols {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(calc(25% - 12px), 1fr));
    gap: 16px;
    margin-top: 16px;
  }
    
  .right-side{
    margin-top: 32px;
  }
  .upload-button{
    border: none;
    display: flex;
    grid-template-columns: 1fr auto;
    align-items: center;
    height: 40px;
    width: 100%;
    cursor: pointer;
    background-color: transparent;
  }
  .button-text{
    text-align: center;
    color: white;
    width: 100%;
    height: 100%;
    background-color: black;
    font-size: 1.05rem;
    border-top-right-radius: 16px;
    border-bottom-right-radius: 16px;
  }
  .inner-button{
    width: 40px;
    height:40px;
    border-top-left-radius: 16px;
    border-bottom-left-radius: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color:rgb(46, 46, 46);
  }


  .mostread-container{
    margin-top: 32px;
  }
  .placeholer-container{
    display: flex;
    justify-content: space-between;
    margin: 0 64px;
  }
</style>


<div class="main">
    <div class="placeholer-container">
      <div class="new-btn-container"><%= link_to new_course_path, class: 'new-btn' do %>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M12 5v14"></path>
    <path d="M5 12h14"></path>
  </svg>
  <span>Upload Course</span>
<% end %></div>
      <div class="searchbar-container">
        <div class="searchbar">
          <button class="search-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search-icon lucide-search"><path d="m21 21-4.34-4.34"/><circle cx="11" cy="11" r="8"/></svg>        
          </button>
          <input placeholder="Search..." class="searchbar-input-field">
        </div>
      </div>
    </div>

  <div class="content-container">
    
      <div class="trending-container">
        <% 
          # Fetch courses with most likes in the last month
          trending_courses = Course.joins(:ratings)
                            .where(ratings: { rating_type: 'like', created_at: 1.month.ago..Time.now })
                            .group(:id)
                            .order(Arel.sql('COUNT(ratings.id) DESC'))
                            .limit(8)
          if trending_courses.any?
        %>
        <p class="text-md">Trending</p>
        <% if trending_courses.present? %>
          <div class="row-4-cols">
            <% trending_courses.each do |course|%>
              <%= render "coursecard", course: course %>
            <% end %>
          </div>
        <% end %>
        <% else %>
          <p>No trending courses availiable</p>
        <% end %>
      </div>
  <div class="mostread-container">
        <% 
            # Fetch courses with most views using a subquery to count views
          most_read_courses = Course.joins(:course_views)
                            .group(:id)
                            .order(Arel.sql('COUNT(course_views.id) DESC'))
                            .limit(8)
          
          if most_read_courses.any?
        %>
        <p class="text-md">Most Read</p>
        <div class="row-4-cols">
          <% most_read_courses.each do |course| %>
            <%= render "coursecard", course: course%>
          <% end %>
        </div>
        <% end %>
  </div>
</div>