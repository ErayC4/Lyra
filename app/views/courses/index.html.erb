<style>
  p{
    margin: 0; 
    padding: 0;
    font-size: 14px;
  }
  button{
    padding: 0;
    margin: 0;
  }
  .main{
    padding-top: 32px;
    padding-bottom: 256px;
    margin-left: 64px;
  }
  .new-btn {
    display: inline-flex;
    align-items: center;
    background-color: black;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    gap: 7px;
    transition: 0.3s ease;
    padding: 7px 14px;
    user-select: none;
    font-size: 14px;
  }
  .text-big{
    font-size: 24px;
  }
  
  .navigator{
    background: rgba(0, 0, 0, 0.05);
    border-radius: 8px;
    display: flex;
    align-items: center;
    height: 40px;
  }

  .content-container{
    margin-left: 64px;
    margin-right: 64px;
  }

  .trending-container{
    margin-top: 32px;
  }
  .row-1-cols{
    margin-top: 16px;
  }
  .row-2-cols {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(calc(50% - 8px), 1fr));
    gap: 16px;
    margin-top: 16px;
  }

  .row-3-cols {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(calc(33.333% - 11px), 1fr));
    gap: 16px;
    margin-top: 16px;
  }

  .row-4-cols {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(calc(25% - 12px), 1fr));
    gap: 16px;
    margin-top: 16px;
  }
  

  .mostread-container{
    margin-top: 32px;
  }
  .placeholer-container{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 64px;
  }

  .long-white-button{
    display: inline-flex;
    align-items: center;
    background-color: transparent;
    color: black;
    text-decoration: none;
    border-radius: 8px;
    gap: 7px;
    padding: 6px 14px;
    border: 1px solid rgb(228, 228, 231);
    white-space: nowrap; 
    user-select: none;
  }
  .long-white-button:hover{
    background-color:rgb(244, 244, 245);
  }
  .search-container {
      width: 100%;
      max-width: 230px;
      border: 1px solid #e0e0e0;
      display: flex;
      border-radius: 6px;
      user-select: none;
  }
  
  .search-input {
      padding: 7px 7px;
      border-radius: 6px;
      border: none;
      background-color: #ffffff;
      font-size: 14px;
      color: #333;
      outline: none;
      width: 100%;
      transition: box-shadow 0.2s ease, border-color 0.2s ease;
  }
  
  .search-container:focus-within {
    border-color: #d0d0d0;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}
  
  .search-input::placeholder {
      color: #999;
  }
  
  .search-icon {
      width: 16px;
      height: 16px;
      color: #888;
      
  }
  .search-button {
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border-radius: 6px;
    width: 30px;
    height: 30px;
    border: none;
    box-sizing: border-box;
    flex-shrink: 0;
}
  .search-button:hover{
    background-color:rgba(0, 0, 0, 0.1);
  }
</style>


<div class="main">
    <div class="placeholer-container">
      <%= link_to new_course_path, class: 'new-btn' do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 5v14"></path>
          <path d="M5 12h14"></path>
        </svg>
        <span>Upload Course</span>
      <% end %>
      <div style="display: flex; align-items: center; gap: 8px;">
        <div class="long-white-button bookmark-toggle">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-list-filter-icon lucide-list-filter"><path d="M3 6h18"/><path d="M7 12h10"/><path d="M10 18h4"/></svg>
          <p class="text-md">Filter</p>
        </div>
        <div class="search-container">
          <button class="search-button">
            <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </button>
          <input type="text" class="search-input" placeholder="Search for courses..." />
        </div>
    </div>
    </div>

  <div class="content-container">
    
      <div class="trending-container">
        <% 
          # Fetch courses with most likes in the last month
          trending_courses = Course.joins(:ratings)
                            .where(ratings: { rating_type: 'like', created_at: 1.month.ago..Time.now })
                            .group(:id)
                            .order(Arel.sql('COUNT(ratings.id) DESC'))
                            .limit(8)
          if trending_courses.any?
        %>
        <p class="text-big">Trending</p>
        <% if trending_courses.present? %>
          <div class="row-4-cols">
            <% trending_courses.each do |course|%>
              <%= render "coursecard", course: course %>
            <% end %>
          </div>
        <% end %>
        <% else %>
          <p>No trending courses availiable</p>
        <% end %>
      </div>
  <div class="mostread-container">
        <% 
            # Fetch courses with most views using a subquery to count views
          most_read_courses = Course.joins(:course_views)
                            .group(:id)
                            .order(Arel.sql('COUNT(course_views.id) DESC'))
                            .limit(8)
          
          if most_read_courses.any?
        %>
        <p class="text-big">Most Read</p>
        <div class="row-4-cols">
          <% most_read_courses.each do |course| %>
            <%= render "coursecard", course: course%>
          <% end %>
        </div>
        <% end %>
  </div>
</div>