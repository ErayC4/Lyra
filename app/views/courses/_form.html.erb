<%= form_with(model: course) do |form| %>
 <style>

        
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            position: relative;
        }
        
        .form-title {
            font-size: 28px;
            margin-bottom: 30px;
            padding-bottom: 10px;
            border-bottom: 3px solid black;
        }
        
        .form-group {
            padding-bottom: 48px;
            padding-top: 16px;
        }
        
        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }
        
        input[type="text"], 
        textarea,
        input[type="file"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            box-sizing: border-box;
            font-size: 16px;
        }
        
        textarea {
            height: 150px;
            resize: vertical;
        }
        
        .button {
            display: inline-block;
            padding: 12px 24px;
            background-color: #00ff99;
            color: black;
            border: none;
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
        }
        
        .button-secondary {
            background-color: #f5f5f5;
            border: 1px solid #ddd;
        }
      
        .tags-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }
        
        .tag {
            background-color: #f0f0f0;
            border: 1px solid #ddd;
            padding: 6px 12px;
            cursor: pointer;
            user-select: none;
        }
        
        .tag.selected {
            background-color: #00ff99;
            border-color: #00ff99;
        }
        
        .actions {
            margin-top: 40px;
            gap: 16px;
            display: flex;
            justify-content: flex-end;
        }
        
        .image-preview {
            width: 100%;
            height: 200px;
            border: 1px dashed #ddd;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
            overflow: hidden;
        }
        
        .image-preview img {
            max-width: 100%;
            max-height: 100%;
        }
        
        .image-preview-text {
            color: #999;
        }

        
        .tag-search {
            margin-top: 16px;
        }
        
        .tag-create {
            display: flex;
            margin-bottom: 8px;
        }
        
        .tag-create input {
            width: auto;
            flex-grow: 1;
        }
        
        .file-templates {
            margin-top: 10px;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        
        .template-checkbox {
            display: flex;
            align-items: center;
            background-color: #f0f0f0;
            padding: 6px 12px;
            cursor: pointer;
        }
        
        .template-checkbox input {
            margin-right: 8px;
        }
        
        .files-section {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        
        .file-row {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        
        .file-input-container {
            flex-grow: 1;
        }
        /* Search Bar */
      .search-container {
        display: flex;
        width: 100%;
      }

      .search-bar {
        flex-grow: 1;
        height: 40px;
        padding: 0 var(--space-md);
        font-size: 16px;
        border: none;
        outline: none;
      }

      .search-bar:focus {
        border-color: #00ff99;
      }

      .search-button {
        width: 64px;
        height: 40px;
        background-color: #00ff99;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
      }

    </style>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
    <div class="container">
        <h2 class="form-title">Upload New Course</h2>
        
        <form>
            <div class="form-group">
                <label for="title">Course Title</label>
                <input type="text" id="title" name="title" placeholder="Enter course title">
            </div>
            
            <div class="form-group">
                <label for="description">Course Description</label>
                <textarea id="description" name="description" placeholder="Enter detailed course description"></textarea>
            </div>
            
            <div class="form-group">
                <label for="cover">Cover Image</label>
                <input type="file" id="cover" name="cover" accept="image/*">
                <div class="image-preview" id="imagePreview">
                    <span class="image-preview-text">Image preview will appear here</span>
                </div>
            </div>
            
            <div class="form-group">
                <label for="notes">Additional Notes</label>
                <textarea id="notes" name="notes" placeholder="Enter any additional notes about the course"></textarea>
            </div>
            

            <div class="form-group">
                <label>Files From Notes</label>
                <div class="file-templates">
                    <label class="template-checkbox">
                        <input type="checkbox" name="template" value="disclaimer"> Disclaimer.pdf
                    </label>
                    <label class="template-checkbox">
                        <input type="checkbox" name="template" value="aboutme"> AboutMe.pdf
                    </label>
                    <label class="template-checkbox">
                        <input type="checkbox" name="template" value="certificates"> Certificates.pdf
                    </label>
                    <label class="template-checkbox">
                        <input type="checkbox" name="template" value="numbers"> numbers.txt
                    </label>
                </div>

                <label style="padding-top: 16px; ">Add additional Files</label>
                <div class="file-input-container">
                    <input type="file" id="courseFiles" name="courseFiles" multiple>
                </div>
            </div>


            
            
            <div class="form-group">
                <label>Course Tags</label>
                <div class="tag-create">
                      <input type="text" id="newTag" placeholder="New tag name">
                      <button type="button" class="button" id="addTagBtn">Add Tag</button>
                  </div>
                <div class="tags-container" id="tagsContainer">
                    <div class="tag">more tags here</div>
                    
                </div>
            </div>
            
            <div class="actions">
                <a href="#" class="button button-secondary go-back-btn">Go Back</a>
                <button type="submit" class="button">Create Course</button>
            </div>
        </form>
    </div>







  <div style="display: none">
  <img src="https://fototapetenwelt.de/wp-content/uploads/2021/01/AdobeStock_284628054.jpeg">
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
    <p>By UserName</p>

  </div>
  <%= form.hidden_field :user_id, value: current_user.id %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  </div>
<% end %>
