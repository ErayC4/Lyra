<style>

  .toolbar{
    border-radius: 8px;
    margin-bottom: 24px;
    height: 32px;
    display: flex;
    justify-content: space-evenly;
    background-color: white;
    align-items: center;
    border: 1px solid rgb(228, 228, 231);
  }
  .toolbar-button{
    background-color: transparent;
    width: 100%;
    border: none;
    cursor: pointer;
    border-radius: 8px;
    transition: 0.2s ease;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .toolbar-button-active{
    background-color: black;
    color: white;
    width: 100%;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .toolbar-button:hover{
    background-color: rgba(0, 0, 0, 0.1);
    height: 100%;
  }
</style>

<%= javascript_include_tag "ai" %>
<%= javascript_include_tag "dropdownmenu" %>
<%= javascript_include_tag "bookmark" %>
<%= javascript_include_tag "bookmarktoggle" %>
<%= javascript_include_tag "sidebar" %>

    <div class="toolbar">
      <button class="toolbar-button" data-window-name="ai-window">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-wand-icon lucide-wand"><path d="M15 4V2"/><path d="M15 16v-2"/><path d="M8 9h2"/><path d="M20 9h2"/><path d="M17.8 11.8 19 13"/><path d="M15 9h.01"/><path d="M17.8 6.2 19 5"/><path d="m3 21 9-9"/><path d="M12.2 6.2 11 5"/></svg>
        <p style="padding-left: 8px; font-size: 14px;">Ai Assitant</p>
      </button>
      <button class="toolbar-button" data-window-name="table-of-contents-window">
<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-notebook-pen-icon lucide-notebook-pen"><path d="M13.4 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-7.4"/><path d="M2 6h4"/><path d="M2 10h4"/><path d="M2 14h4"/><path d="M2 18h4"/><path d="M21.378 5.626a1 1 0 1 0-3.004-3.004l-5.01 5.012a2 2 0 0 0-.506.854l-.837 2.87a.5.5 0 0 0 .62.62l2.87-.837a2 2 0 0 0 .854-.506z"/></svg>
        <p style="padding-left: 8px; font-size: 14px;">Notes</p>
      </button>
      <button class="toolbar-button" data-window-name="files-window">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-folder-icon lucide-folder"><path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"/></svg>
        <p style="padding-left: 8px; font-size: 14px;">Your Files</p>
      </button>
    </div>

    <div class="ai-window" style="height:calc(100% - 32px)">
      <%= render template: "sidebar/aiwindow", locals: { ais: @ais } %>
    </div>
    <div class="table-of-contents-window">
      Coming Soon...
    </div>

    <div class="files-window">
      <%= render "sidebar/filewindow", note: @note %>
    </div>