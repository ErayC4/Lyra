<style>

  .toolbar-container{
    width: calc(50.6% - 32px);
    position: fixed;
    z-index: 1000; 
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 8px;
    border: 1px solid #DBDBDB;
    padding: 8px 16px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
  }
  .toolbar-type{
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .bi{
    width: 20px;
    height: 20px;
    cursor: pointer;
  }

  .editorjs{
    position: relative;
    padding: 0 42px;
    margin-top: 64px;
    border-radius: 8px;
    border: 1px solid #DBDBDB;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
  }
  .ce-paragraph { /*paragraph block line height*/
    line-height: 1.5;
  }



</style>

