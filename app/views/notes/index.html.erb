<style>
  p{
    padding: 0;
    margin: 0;
  }
  a{
    text-decoration: none;
    color: inherit;
  }
  .text-md{
    font-size: 14px;
  }
  .note-item{
    padding: 16px 32px;
    display: grid;
    align-items: center;
    grid-template-columns: 1fr 1fr 1fr;
    cursor: pointer;
    transition: 0.3s ease;
    background-color: transparent;
    border: 1px solid rgb(228, 228, 231);
    border-top: none;
  }
  .last-note-item {
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
  }
  
  .note-item:hover{
    background-color: #FAFAFA;
  }

  .main{
    margin-left: 64px;
    background-color: white;
    min-height: 100vh;
  }
  .notes-container{
    padding: 32px 64px;
  }
  .note-item-container{
    display: flex;
    flex-direction: column;
    transition: height 0.3s ease-out, opacity 0.3s ease-out;
  }
  .note-item-header{
    margin-top: 24px;
    padding: 12px 32px;
    display: grid;
    align-items: center;
    grid-template-columns: 1fr 1fr 1fr;
    background-color: #F4F4F5;
    color: #71717A;
    border: 1px solid rgb(228, 228, 231);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }
  .new-btn {
    display: inline-flex;
    align-items: center;
    background-color: black;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    gap: 7px;
    transition: 0.3s ease;
    padding: 7px 14px;
    user-select: none;
  }
  
  .searchbar:focus{
    border: none;
    outline: none;
  }
  .notes-buttons{
    display:flex;
    align-items: center;
    justify-content: space-between;
  }
  .long-white-button{
    display: inline-flex;
    align-items: center;
    background-color: transparent;
    color: black;
    text-decoration: none;
    border-radius: 8px;
    gap: 7px;
    padding: 6px 14px;
    border: 1px solid rgb(228, 228, 231);
    white-space: nowrap; 
    user-select: none;
  }
  .long-white-button:hover{
    background-color:rgb(244, 244, 245);
  }
  .search-container {
      width: 100%;
      max-width: 230px;
      border: 1px solid #e0e0e0;
      display: flex;
      border-radius: 6px;
      user-select: none;
  }
  
  .search-input {
      padding: 7px 7px;
      border-radius: 6px;
      border: none;
      background-color: #ffffff;
      font-size: 14px;
      color: #333;
      outline: none;
      width: 100%;
      transition: box-shadow 0.2s ease, border-color 0.2s ease;
  }
  
  .search-container:focus-within {
    border-color: #d0d0d0;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}
  
  .search-input::placeholder {
      color: #999;
  }
  
  .search-icon {
      width: 16px;
      height: 16px;
      color: #888;
      
  }
  .search-button {
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border-radius: 6px;
    width: 30px;
    height: 30px;
    border: none;
    box-sizing: border-box;
    flex-shrink: 0;
}
  .search-button:hover{
    background-color:rgba(0, 0, 0, 0.1);
  }
  .note-actions{
    display: flex;
    gap: 8px;
  }
  .lucide-settings{
    visibility: hidden;
  }
  .bookmark-icon{
    visibility: hidden;
  }
  .note-item:hover .lucide-settings,
  .note-item:hover .bookmark-icon {
      visibility: visible;
  }

  .bookmarked{
    visibility: visible;
  }
  .hidden-item{
    display: none;
  }
</style>
<%= javascript_include_tag "bookmark" %>
<%= javascript_include_tag "bookmarktoggle" %>
<script>
  document.addEventListener("DOMContentLoaded", function() {
  document.querySelectorAll(".note-actions").forEach(function(element) {
    element.addEventListener("click", function(event) {
      event.stopPropagation();
      event.preventDefault();
    });
  });
});
</script>
<div class="main">
<div id="notes" class="notes-container">
  <div class="notes-buttons">
    <%= link_to new_note_path, class: 'new-btn text-md' do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 5v14"></path>
        <path d="M5 12h14"></path>
      </svg>
      <span>Create Note</span>
    <% end %>
    <div style="display: flex; align-items: center; gap: 8px;">
      <div class="long-white-button bookmark-toggle" id="bookmarksToggle" onclick="onOffButton('bookmark-toggle', 'white', 'black')">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-bookmark-icon lucide-bookmark"><path d="m19 21-7-4-7 4V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16z"/></svg>
        <p class="text-md">Show Only Bookmarks</p>
      </div>
      <div class="search-container">
        <button class="search-button">
          <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
        </button>
        <input type="text" class="search-input" placeholder="Search the docs..." />
      </div>
    </div>
  </div>
  <div class="note-item-header">
    <p class="text-md" style="font-weight: bold">Name</p>
    <p class="text-md" style="font-weight: bold">Date</p>
    <p class="text-md" style="font-weight: bold">Actions</p>
  </div>
  <div class="note-item-container">
    <% @notes.each_with_index do |note, index| %>
    <a href="<%= note_path(note) %>">
      <div class="note-item bookmarkable-item <%= 'last-note-item' if index == @notes.length - 1 %>">
        <p class="text-md"><%= note.title %></p>
        <div style="display: flex; gap: 8px; align-items: center;">
          <p class="text-md"><%= format_date(note.updated_at) %></p>
        </div>
        <div class="note-actions">
          <svg data-item-id="<%= note.id %>" data-table-name="note" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="bookmark-icon <%= 'bookmarked' if note.bookmarked %>" >
            <path d="m19 21-7-4-7 4V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16z"/>
          </svg>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-settings"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>
        </div>
      </div>
    </a>
    <% end %>
  </div>
</div>
</div>