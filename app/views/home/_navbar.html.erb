<style>
    .navbar{
        height: calc(100vh - 64px);
        background-color: #DDDDDD;
        display: flex; 
        flex-direction: column;
        justify-content: space-between;
        padding: 32px 10px;
        align-items: center;
    }
    .logo{
        height: 44px;
        width: 44px;
        border-radius: 99px;
        background-color: blue;
    }
    .navigation-menu{
        display: flex;
        background-color: rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        flex-direction: column;
    }
    .navigation-menu-item, .navigation-menu-item-active, .settings-menu-item{
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 8px;
        cursor: pointer;
    }
    .navigation-menu-item:hover{
        background-color: rgba(0, 0, 0, 0.1);
    }
    .navigation-menu-item-active {
        background-color: rgba(0, 0, 0, 0.1);
    }
    .settings-menu-item{
        background-color: rgba(0, 0, 0, 0.1);
    }
    .settings-menu-item:hover {
        background-color: rgba(0, 0, 0, 0.2);
    }
    .settings-menu{
        display: flex;
        border-radius: 8px;
        flex-direction: column;
        gap: 8px;
    }
    .profile-picture{
        width: 40px;
        height: 40px;
        border-radius: 8px;
        cursor: pointer;
        object-position: center;
        object-fit: cover;
    }
    .lucide{
        stroke: black;
    }
</style>
<div class="navbar">
    <div class="logo">
    </div>

    <div class="navigation-menu">
