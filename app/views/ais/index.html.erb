                    <button 
                      onclick="openChat(<%= ai.id %>)" 
                      data-chat-id="<%= ai.id %>"
                      class="<%= 'active' if @active_chat_id == ai.id %> chat-list-item"
                    >
                      <p class="chat-title">
                        <% user_message = ai.chat.find { |message| message["role"] == "user" } %>
                        <% if user_message %>
                          <%= user_message["content"].split.first(5).join(" ") %>
                        <% end %>
                      </p>
                    </button>
                    <% end %>
                  <% end %>
