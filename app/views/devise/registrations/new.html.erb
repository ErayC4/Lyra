<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title">Registrieren</h1>
      <p class="auth-description">
        Erstelle deinen Account, um loszulegen.
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, html: { class: "auth-form" }) do |f| %>
      <div class="form-space">
        <div class="form-item">
          <%= f.label :email, "E-Mail", class: "form-label" %>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email", 
                class: "form-input",
                placeholder: "name@beispiel.com" %>
          <% if resource.errors[:email].any? %>
            <div class="error-message"><%= resource.errors[:email].first %></div>
          <% end %>
        </div>

        <div class="form-item">
          <%= f.label :password, "Passwort", class: "form-label" %>
          <%= f.password_field :password, 
                autocomplete: "new-password", 
                class: "form-input",
                placeholder: "Mindestens 6 Zeichen" %>
          <% if resource.errors[:password].any? %>
            <div class="error-message"><%= resource.errors[:password].first %></div>
          <% end %>
          <% if @minimum_password_length %>
            <p class="input-hint">Mindestens <%= @minimum_password_length %> Zeichen erforderlich</p>
          <% end %>
        </div>

        <div class="form-item">
          <%= f.label :password_confirmation, "Passwort bestätigen", class: "form-label" %>
          <%= f.password_field :password_confirmation, 
                autocomplete: "new-password", 
                class: "form-input",
                placeholder: "Passwort wiederholen" %>
          <% if resource.errors[:password_confirmation].any? %>
            <div class="error-message"><%= resource.errors[:password_confirmation].first %></div>
          <% end %>
        </div>

        <%= f.submit "Account erstellen", class: "btn btn-primary btn-full" %>
      </div>
    <% end %>

    <div class="auth-divider">
      <div class="divider-line"></div>
      <span class="divider-text">ODER WEITER MIT</span>
      <div class="divider-line"></div>
    </div>

    <button class="btn btn-outline btn-full social-btn">
      <svg class="btn-icon" viewBox="0 0 24 24">
        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
      </svg>
      Google
    </button>

    <div class="auth-footer">
      <p class="footer-text">
        Bereits einen Account?
        <%= link_to "Anmelden", new_session_path(resource_name), class: "footer-link" %>
      </p>
      <div class="footer-links">
        <p class="footer-text-small">
          Mit der Registrierung stimmst du unseren 
          <%= link_to "Nutzungsbedingungen", "#", class: "footer-link-small" %> und der 
          <%= link_to "Datenschutzerklärung", "#", class: "footer-link-small" %> zu.
        </p>
      </div>
    </div>
  </div>
</div>

<style>
/* CSS Variables für shadcn/ui Theme */
:root {
  --background: 0 0% 100%;
  --foreground: 222.2 84% 4.9%;
  --card: 0 0% 100%;
  --card-foreground: 222.2 84% 4.9%;
  --popover: 0 0% 100%;
  --popover-foreground: 222.2 84% 4.9%;
  --primary: 221.2 83.2% 53.3%;
  --primary-foreground: 210 40% 98%;
  --secondary: 210 40% 96%;
  --secondary-foreground: 222.2 84% 4.9%;
  --muted: 210 40% 96%;
  --muted-foreground: 215.4 16.3% 46.9%;
  --accent: 210 40% 96%;
  --accent-foreground: 222.2 84% 4.9%;
  --destructive: 0 84.2% 60.2%;
  --destructive-foreground: 210 40% 98%;
  --border: 214.3 31.8% 91.4%;
  --input: 214.3 31.8% 91.4%;
  --ring: 221.2 83.2% 53.3%;
  --radius: 0.5rem;
}

/* Dark mode variables */
.dark {
  --background: 222.2 84% 4.9%;
  --foreground: 210 40% 98%;
  --card: 222.2 84% 4.9%;
  --card-foreground: 210 40% 98%;
  --popover: 222.2 84% 4.9%;
  --popover-foreground: 210 40% 98%;
  --primary: 217.2 91.2% 59.8%;
  --primary-foreground: 222.2 84% 4.9%;
  --secondary: 217.2 32.6% 17.5%;
  --secondary-foreground: 210 40% 98%;
  --muted: 217.2 32.6% 17.5%;
  --muted-foreground: 215 20.2% 65.1%;
  --accent: 217.2 32.6% 17.5%;
  --accent-foreground: 210 40% 98%;
  --destructive: 0 62.8% 30.6%;
  --destructive-foreground: 210 40% 98%;
  --border: 217.2 32.6% 17.5%;
  --input: 217.2 32.6% 17.5%;
  --ring: 224.3 76.3% 94.1%;
}

* {
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: hsl(var(--background));
  color: hsl(var(--foreground));
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}

.auth-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
  background-color: hsl(var(--muted) / 0.3);
}

.auth-card {
  width: 100%;
  max-width: 400px;
  background-color: hsl(var(--card));
  border: 1px solid hsl(var(--border));
  border-radius: var(--radius);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  padding: 2rem;
}

.auth-header {
  text-align: center;
  margin-bottom: 2rem;
}

.auth-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: hsl(var(--foreground));
  margin: 0 0 0.5rem 0;
  letter-spacing: -0.025em;
}

.auth-description {
  font-size: 0.875rem;
  color: hsl(var(--muted-foreground));
  margin: 0;
}

.auth-form {
  width: 100%;
}

.form-space > * + * {
  margin-top: 1rem;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-label {
  font-size: 0.875rem;
  font-weight: 500;
  color: hsl(var(--foreground));
  margin: 0;
}

.form-input {
  width: 100%;
  height: 2.5rem;
  padding: 0.5rem 0.75rem;
  border: 1px solid hsl(var(--input));
  border-radius: calc(var(--radius) - 2px);
  background-color: hsl(var(--background));
  color: hsl(var(--foreground));
  font-size: 0.875rem;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.form-input::placeholder {
  color: hsl(var(--muted-foreground));
}

.form-input:focus {
  outline: none;
  border-color: hsl(var(--ring));
  box-shadow: 0 0 0 2px hsl(var(--ring) / 0.2);
}

.input-hint {
  font-size: 0.75rem;
  color: hsl(var(--muted-foreground));
  margin: 0;
  margin-top: -0.25rem;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  height: 2.5rem;
  padding: 0.5rem 1rem;
  border-radius: calc(var(--radius) - 2px);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  text-decoration: none;
  border: 1px solid transparent;
  outline: none;
}

.btn:focus-visible {
  box-shadow: 0 0 0 2px hsl(var(--ring) / 0.5);
}

.btn-primary {
  background-color: hsl(var(--primary));
  color: hsl(var(--primary-foreground));
  border-color: hsl(var(--primary));
}

.btn-primary:hover {
  background-color: hsl(var(--primary) / 0.9);
}

.btn-outline {
  background-color: hsl(var(--background));
  color: hsl(var(--foreground));
  border-color: hsl(var(--input));
}

.btn-outline:hover {
  background-color: hsl(var(--accent));
  color: hsl(var(--accent-foreground));
}

.btn-full {
  width: 100%;
}

.btn-icon {
  width: 1rem;
  height: 1rem;
}

.social-btn {
  margin-top: 1rem;
}

.auth-divider {
  display: flex;
  align-items: center;
  margin: 1.5rem 0;
  gap: 1rem;
}

.divider-line {
  flex: 1;
  height: 1px;
  background-color: hsl(var(--border));
}

.divider-text {
  font-size: 0.75rem;
  color: hsl(var(--muted-foreground));
  font-weight: 500;
  letter-spacing: 0.1em;
}

.auth-footer {
  margin-top: 1.5rem;
  text-align: center;
}

.footer-text {
  font-size: 0.875rem;
  color: hsl(var(--muted-foreground));
  margin: 0 0 0.5rem 0;
}

.footer-text-small {
  font-size: 0.75rem;
  color: hsl(var(--muted-foreground));
  margin: 0;
  line-height: 1.4;
}

.footer-links {
  margin-top: 1rem;
}

.footer-link {
  color: hsl(var(--primary));
  text-decoration: underline;
  text-underline-offset: 4px;
  font-weight: 500;
}

.footer-link:hover {
  color: hsl(var(--primary) / 0.8);
}

.footer-link-small {
  font-size: 0.75rem;
  color: hsl(var(--muted-foreground));
  text-decoration: underline;
  text-underline-offset: 4px;
}

.footer-link-small:hover {
  color: hsl(var(--foreground));
}

/* Flash Messages im shadcn Style */
.alert {
  padding: 1rem;
  border-radius: var(--radius);
  margin-bottom: 1rem;
  font-size: 0.875rem;
  border: 1px solid transparent;
}

.alert-notice {
  background-color: hsl(var(--muted));
  color: hsl(var(--foreground));
  border-color: hsl(var(--border));
}

.alert-alert {
  background-color: hsl(var(--destructive) / 0.1);
  color: hsl(var(--destructive-foreground));
  border-color: hsl(var(--destructive) / 0.5);
}

/* Error States */
.form-input.error {
  border-color: hsl(var(--destructive));
  box-shadow: 0 0 0 2px hsl(var(--destructive) / 0.2);
}

.field_with_errors .form-input {
  border-color: hsl(var(--destructive));
}

.error-message {
  color: hsl(var(--destructive));
  font-size: 0.75rem;
  margin: 0;
}

/* Loading State */
.btn-loading {
  position: relative;
  color: transparent;
}

.btn-loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 1rem;
  height: 1rem;
  border: 2px solid transparent;
  border-top: 2px solid currentColor;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  color: hsl(var(--primary-foreground));
}

@keyframes spin {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

/* Responsive Design */
@media (max-width: 640px) {
  .auth-container {
    padding: 0.5rem;
  }
  
  .auth-card {
    padding: 1.5rem;
  }
  
  .auth-title {
    font-size: 1.25rem;
  }
}

p {
  padding: 0;
  margin: 0;
}
</style>